<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    Email: <%= @order.email %>
    <%= "Nihao #{ENV['USERNAME']}" %>
  </header>
    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product Ordered</th>
            <th>Quantity</th>
            <th style="white-space: nowrap;">Line Item Total</th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |line_item| %>
            <%= render 'line_item', product_id: line_item[:product_id], quantity: line_item[:quantity], 
            total_price_cents: line_item[:total_price_cents] %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3">
              ORDER TOTAL:
            </th>
            <th>
              $<%= @order.total_cents / 100.0 %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
