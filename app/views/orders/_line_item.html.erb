<% product = Product.find(product_id) %>
<tr>
  <td>
    <%= image_tag product.image.thumb.url , alt: product.name %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    $<%= total_price_cents / 100.0 %>
  </td>
</tr>
